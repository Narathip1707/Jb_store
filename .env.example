# Docker Environment Variables
# Warehouse Management System
# Copy this file to .env and modify as needed

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_NAME=Warehouse Management System
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_CONNECTION=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=warehouse_db
DB_USERNAME=warehouse_user
DB_PASSWORD=warehouse_pass123

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=10000

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_STORE=redis
SESSION_SECRET=your-session-secret-key-change-in-production
SESSION_MAX_AGE=86400000

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=warehouse-management-system

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_DRIVER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@warehouse.local
MAIL_FROM_NAME="Warehouse Management System"

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,xlsx,csv
UPLOAD_PATH=/app/uploads
SERVE_STATIC_FILES=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/logs/application.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_LOGIN_MAX=5

# CORS Settings
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ===========================================
# API CONFIGURATION
# ===========================================
API_VERSION=v1
API_PREFIX=/api
API_PAGINATION_LIMIT=20
API_PAGINATION_MAX_LIMIT=100

# ===========================================
# INTEGRATION SETTINGS
# ===========================================
# External ERP API
ERP_API_URL=
ERP_API_KEY=
ERP_API_TIMEOUT=30000

# E-commerce Integration
ECOMMERCE_WEBHOOK_SECRET=
ECOMMERCE_API_URL=
ECOMMERCE_API_KEY=

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# Performance Monitoring
ENABLE_QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD=1000

# ===========================================
# DEVELOPMENT/TESTING SETTINGS
# ===========================================
# Seed Database
SEED_DATABASE=true
CREATE_SAMPLE_DATA=true

# Testing
TEST_DATABASE=warehouse_test_db
TEST_REDIS_DB=1

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify for production deployment

# APP_ENV=production
# APP_DEBUG=false
# LOG_LEVEL=info
# DB_SSL=true
# REDIS_TLS=true
# SESSION_SECURE=true
# JWT_EXPIRES_IN=2h

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_REGION=

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# Low Stock Alerts
LOW_STOCK_ALERT_ENABLED=true
LOW_STOCK_CHECK_INTERVAL=3600000

# Email Notifications
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false

# Webhook Notifications
WEBHOOK_URL=
WEBHOOK_SECRET=

# ===========================================
# MOBILE APP CONFIGURATION
# ===========================================
MOBILE_API_VERSION=v1
MOBILE_SESSION_TIMEOUT=28800000
PUSH_NOTIFICATION_KEY=
FCM_SERVER_KEY=

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_TTL=3600
CACHE_INVENTORY_TTL=300
CACHE_PRODUCTS_TTL=1800
CACHE_USERS_TTL=900

# ===========================================
# QUEUE CONFIGURATION
# ===========================================
QUEUE_DRIVER=redis
QUEUE_CONNECTION=redis
QUEUE_DEFAULT=default
QUEUE_FAILED_TABLE=failed_jobs

# Job Retry Settings
JOB_MAX_ATTEMPTS=3
JOB_RETRY_DELAY=60000

# ===========================================
# AUDIT & COMPLIANCE
# ===========================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_MODE=false
DATA_ENCRYPTION_ENABLED=false